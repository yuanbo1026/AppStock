<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/RealWhite"
    >
 	
    <ImageView 
        android:layout_marginTop="7dp"
		android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:id="@+id/iv_child_item_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_cat_finances"
        />
 
    <com.technisat.appstock.app.CustomTextView
        android:layout_alignTop="@id/iv_child_item_icon"
        android:layout_alignBottom="@id/iv_child_item_icon"
        android:layout_toRightOf="@id/iv_child_item_icon"
        android:id="@+id/lblListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="@color/AppStockDrawerGrey"
        android:text="Example" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_below="@id/lblListItem"
        android:id="@+id/v_list_divider"
        android:layout_height="1px"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:background="@color/AppStockDrawerLightGrey"
        android:visibility="gone"
        />
 
</RelativeLayout>