<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/AppStockBackgroundGray" >
 
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schreibe dein Kommentar:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/AppStockDarkBlue" />
 
    <EditText
        android:id="@+id/editTextDialogUserInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/RealWhite"
        android:hint="...dein Kommentar"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" >
 
        <requestFocus />
 
    </EditText>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    
    <Button 
        android:id="@+id/btn_propmt_without"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="ohne Kommentar"
        android:textColor="@color/RealWhite"
        android:layout_marginRight="2dp"
        android:background="@drawable/custom_button_states" />
    
    <Button 
        android:id="@+id/btn_propmt_with"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:text="senden"
        android:textColor="@color/RealWhite"
        android:background="@drawable/custom_button_states" />
    
    </LinearLayout>
</LinearLayout>