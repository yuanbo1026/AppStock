<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AllContentTypesActivity" >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_register_pflichtfeld"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/et_register_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/i_register_username"
                android:background="@drawable/custom_edittext_focused"
                android:hint="Username *"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/i_register_username"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_cancel" />

            <EditText
                android:id="@+id/et_register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/et_register_username"
                android:layout_below="@id/et_register_username"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_edittext_focused"
                android:hint="Email *"
                android:inputType="textEmailAddress"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp" />

            <ImageView
                android:id="@+id/i_register_email"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/et_register_username"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_cancel" />

            <EditText
                android:id="@+id/et_register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/et_register_username"
                android:layout_below="@id/et_register_email"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext_focused"
                android:hint="Passwort *"
                android:inputType="textPassword"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp" />

            <ImageView
                android:id="@+id/i_register_password"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/et_register_email"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_cancel" />

            <EditText
                android:id="@+id/et_register_password_wdh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/et_register_username"
                android:layout_below="@id/et_register_password"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext_focused"
                android:hint="Passwort wiederholen *"
                android:inputType="textPassword"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp" />

            <ImageView
                android:id="@+id/i_register_password_wdh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/et_register_password"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_cancel" />

            <EditText
                android:id="@+id/et_register_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/et_register_username"
                android:layout_below="@id/et_register_password_wdh"
                android:layout_marginTop="50dp"
                android:background="@drawable/custom_edittext_focused"
                android:hint="Vorname"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/et_register_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/et_register_username"
                android:layout_below="@id/et_register_firstname"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext_focused"
                android:hint="Nachname"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/et_register_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/et_register_username"
                android:layout_below="@id/et_register_lastname"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext_focused"
                android:gravity="left|center_vertical"
                android:hint="Geb. Datum"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp" />

            <EditText
                android:id="@+id/et_register_streetname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/et_register_username"
                android:layout_below="@id/et_register_date_of_birth"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext_focused"
                android:hint="StraÃŸe"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/et_register_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/et_register_username"
                android:layout_below="@id/et_register_streetname"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext_focused"
                android:hint="Nummer, Zustatz"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/et_register_zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/et_register_username"
                android:layout_below="@id/et_register_number"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext_focused"
                android:hint="Plz"
                android:inputType="number"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp" />

            <EditText
                android:id="@+id/et_register_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/et_register_username"
                android:layout_below="@id/et_register_zip"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edittext_focused"
                android:hint="Ort/Stadt"
                android:paddingBottom="5dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:paddingTop="5dp"
                android:singleLine="true" />

            
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_register_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/custom_button_states"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Registrieren"
        android:textAlignment="center"
        android:textColor="@color/RealWhite" />

    <TextView
        android:id="@+id/tv_register_pflichtfeld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_register_register"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:text="* Pflichtfeld"
        android:textColor="@color/AppStockGrey" />

</RelativeLayout>